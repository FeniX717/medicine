<p id="notice"><%= notice %></p>

<h1>Listing Alcohols</h1>

<table>
  <thead>
    <tr>
      <th>Addicted</th>
      <th>Type</th>
      <th>Drinking period</th>
      <th>Previous treatment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alcohols.each do |alcohol| %>
      <tr>
        <td><%= alcohol.addicted %></td>
        <td><%= alcohol.type %></td>
        <td><%= alcohol.drinking_period %></td>
        <td><%= alcohol.previous_treatment %></td>
        <td><%= link_to 'Show', alcohol %></td>
        <td><%= link_to 'Edit', edit_alcohol_path(alcohol) %></td>
        <td><%= link_to 'Destroy', alcohol, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

